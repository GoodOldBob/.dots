! ===== URxvt =====

! fonts:

URxvt*font: xft:Monospace:pixelsize=32
URxvt*boldFont: xft:Monospace:bold:pixelsize=32

! color scheme:

URxvt*background: #2D2D2D
URxvt*foreground: #DEDEDE

URxvt*colorUL: #86a2b0

! black
URxvt*color0  : #2E3436
URxvt*color8  : #555753
! red
URxvt*color1  : #CC0000
URxvt*color9  : #EF2929
! green
URxvt*color2  : #4E9A06
URxvt*color10 : #8AE234
! yellow
URxvt*color3  : #C4A000
URxvt*color11 : #FCE94F
! blue
URxvt*color4  : #3465A4
URxvt*color12 : #729FCF
! magenta
URxvt*color5  : #75507B
URxvt*color13 : #AD7FA8
! cyan
URxvt*color6  : #06989A
URxvt*color14 : #34E2E2
! white
URxvt*color7  : #D3D7CF
URxvt*color15 : #EEEEEC

! scrolling options and cursor style:

URxvt*saveLines: 12000
URxvt*scrollBar: false
URxvt*cursorBlink: true

! extensions:

URxvt.perl-ext-common:  default, matcher, tabbedex

! tabs settings:

! URxvt.tabbed.tabbar-fg: 2
! URxvt.tabbed.tabbar-bg: 0
! URxvt.tabbed.tab-fg: 2
! URxvt.tabbed.tab-bg: 8
! URxvt.tabbed.autohide:  true
! URxvt.tabbed.new-button:  false
! URxvt.tabbed.title: true
! URxvt.keysym.Control-t: perl:tabbedex:new_tab

! enabling clickable links:

URxvt.url-launcher: google-chrome
URxvt.matcher.button: 1

