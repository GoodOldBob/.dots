! ===== URxvt =====

! window:

URxvt.internalBorder: 30

! fonts:

URxvt*font: xft:Source Code Pro:pixelsize=30
URxvt*boldFont: xft:Source Code Pro:bold:pixelsize=30

! color scheme: https://github.com/vypr/dottie/blob/master/.Xresources

URxvt*depth: 32

! --- special colors ---

*background: #272727
*foreground: #fafafa

! --- standard colors ---

! black
*color0: #393939

! bright_black
*color8: #5b5b5b

! red
*color1: #f42d6c

! bright_red
*color9: #fa9fbb

! green
*color2: #6cf42d

! bright_green
*color10: #bbfa9f

! yellow
*color3: #f4b52d

! bright_yellow
*color11: #fadd9f

! blue
*color4: #2d8af4

! bright_blue
*color12: #9ec9fa

! magenta
*color5: #b52df4

! bright_magenta
*color13: #dd9ffa

! cyan
*color6: #2df4b5

! bright_cyan
*color14: #9ffadd

! white
*color7: #d8d8d8

! bright_white
*color15: #ffffff

! scrolling options and cursor style:

URxvt*saveLines: 12000
URxvt*scrollBar: false
URxvt*cursorBlink: true

! extensions:

URxvt.perl-ext-common:  default,matcher

! enabling clickable links:

URxvt.url-launcher: google-chrome
URxvt.matcher.button: 1

! ===== xautolock =====

Xautolock.time: 5
Xautolock.locker: i3plock
Xautolock.notify: 30
Xautolock.notifier: notify-send -a "xautolock" "Locking" "Locking in 30 seconds..."

