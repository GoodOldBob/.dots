#!/usr/bin/env bash

killall lemonbar iwevent pactl 2>/dev/null
emit-lemonblocks \
  -B "{{ bar_block_bgc }}" \
  -A "{{ n_primary }}" \
  -U "{{ n_secondary }}" \
  -L "{{ bar_underline_color }}" \
  2>/dev/null | tee ~/.lemonlog |\
  lemonbar -a 256 \
    -F "{{ fgc }}" \
    -B "{{ bar_bgc }}" \
    -u {{ bar_underline }} \
    -g x{{ bar_height }} \
    {{ #bar_fonts }} -f "{{ . }}" {{ /bar_fonts }} \
    -o {{ bar_font_offset }} |\
  bash >/dev/null &

