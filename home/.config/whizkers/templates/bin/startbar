#!/usr/bin/env bash

killall lemonbar 2>/dev/null
emit-lemonblocks \
  -B "{{ bar_bgc }}" \
  -F "{{ fgc }}" \
  -U "{{ fgc }}" \
  --urgent "{{ b_red }}" \
  --accent "{{ n_primary }}" \
  2>/dev/null |\
  lemonbar -u {{ bar_underline }} -g x{{ bar_height }} \
	  {{ #bar_fonts }} -f "{{ . }}" {{ /bar_fonts }} \
	  -o {{ bar_font_offset }} |\
  bash >/dev/null &

