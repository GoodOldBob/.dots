#!/usr/bin/env bash

barpid="$(\
	ps aux | grep emit-lemonblocks | grep -v grep | awk '{ print $2 }' \
)"

[[ ! -z "$barpid" ]] && echo "$barpid" | xargs kill
killall iwevent pactl

emit-lemonblocks \
  -B "{{ bar_block_bgc }}" \
  -A "{{ n_primary }}" \
  -U "{{ n_secondary }}" \
  -L "{{ bar_underline_color }}" \
  2>/dev/null | tee ~/.lemonlog |\
  lemonbar -a 256 \
    {{ #bar_black_fgc }}
    -F "{{ n_black }}" \
    {{ /bar_black_fgc }}
    {{ ^bar_black_fgc }}
    {{ #bar_white_fgc }}
    -F "{{ b_white }}" \
    {{ /bar_white_fgc }}
    {{ ^bar_white_fgc }}
    -F "{{ fgc }}" \
    {{ /bar_white_fgc }}
    {{ /bar_black_fgc }}
    -B "{{ bar_bgc }}" \
    -u {{ bar_underline }} \
    -g x{{ bar_height }} \
    {{ #bar_on_bottom }} -b {{ /bar_on_bottom }} \
    {{ #bar_fonts }} -f "{{ . }}" {{ /bar_fonts }} \
    -o {{ bar_font_offset }} \
    -f "{{ bar_icons }}" |\
  bash >/dev/null &

