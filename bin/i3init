#!/usr/bin/env bash
# Start my i3 session.

## VARIABLES

# Personal
ZIPCODE=92129

# System
DPI=276
XRESOURCES=$HOME/.Xresources

# Screensaver
SCREENSAVER=600
DPMS_STANDBY=720
DPMS_SUSPEND=840
DPMS_OFF=960

## CONFIG

xrandr --dpi $DPI &
xrdb -merge "$XRESOURCES" &
xset dpms $DPMS_STANDBY $DPMS_SUSPEND $DPMS_OFF s $SCREENSAVER &

## AUTOSTART

# Gnome
/usr/libexec/gnome-settings-daemon &
/usr/libexec/polkit-gnome-authentication-agent-1 &

# Desktop
urxvt256cd -q -o -f &
mpd &
compton &
xautolock &
dunst &
lightsOn &

# User
xflux -l 35.7 -g 139.5 &
dropbox start &
ibus-daemon -xdr &

## LET'S DO THIS
i3
~/.config/lemonbar/emit 2>/dev/null |\
  lemonbar -u 2 -f "M+ 1p-7" |\
  sh &>/dev/null &

