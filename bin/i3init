#!/usr/bin/env bash

## VARIABLES

# Personal
ZIPCODE=92129

# System
DPI=276
XRESOURCES=$HOME/.Xresources

# Screensaver
SCREENSAVER=360
DPMS_STANDBY=420
DPMS_SUSPEND=480
DPMS_OFF=600

## CONFIG

xrandr --dpi $DPI &
xrdb -merge "$XRESOURCES" &
xset dpms $DPMS_STANDBY $DPMS_SUSPEND $DPMS_OFF s $SCREENSAVER &

## AUTOSTART

start_urxvt256c() {
  urxvt256cd -q -o -f
  urxvt256cc -name scratchpad_term
  urxvt256cc -name scratchpad_music -e ncmpcpp
}

start_urxvt256c &
mpd &
compton &
/usr/libexec/gnome-settings-daemon &
xautolock &
dunst &
caffeine &

xflux -z $ZIPCODE &
dropbox start &
# ibus-daemon -xdr &

## LET'S DO THIS
i3

