# Globals
export DOTS=~/.dots
export LOCAL=~/.local
export WORKSPACE=~/code
export MY_SCRIPTS="$WORKSPACE/scripts"

# Pull in local defs
LOCAL_CONF="$LOCAL/shell/local.sh"
[ -f "$LOCAL_CONF" ] && source "$LOCAL_CONF"

# Paths
for p in \
    "$LOCAL/bin" \
    "$MY_SCRIPTS"; do
  [ -d "$p" ] && PATH="$PATH:$p"
done
export PATH

# Configs
for rc in \
    "$LOCAL/shell/config.sh"; do
  [ -f "$rc" ] && source "$rc"
done

# Completions
for f in ~/.bash_completion.d/*; do
  source "$f"
done
